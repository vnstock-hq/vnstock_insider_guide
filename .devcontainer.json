{
    "name": "VNStock Insider Guide",
    "image": "mcr.microsoft.com/devcontainers/python:3.10",
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "ms-python.vscode-pylance",
                "redhat.vscode-yaml",
                "eamodio.gitlens"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "jupyter.notebooks.cellMarkerRegex": "^# %%\\s*(?:(.*))?$|^#\\s*%%\\s*(?:(.*))?$",
                "files.exclude": {
                    "**/__pycache__": true,
                    "**/*.pyc": true
                }
            }
        }
    },
    "initializeCommand": "mkdir -p /tmp/vscode_init",
    "postCreateCommand": "pip install --upgrade pip && pip install vnstock pandas plotly",
    "postStartCommand": "bash .devcontainer/open-notebooks.sh",
    "remoteUser": "vscode"
}